
	<link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/lightbox.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"><{{!}}/script>
    <script src="/js/lightbox.js"><{{!}}/script>
<h2 class="page-header">Gallery</h2>


<div>
<div class="gallery">
    {{#each meetups}}
      {{#if this.img}} 
     <div class="galleryimg">
      <a href="/uploads/{{ this.img }}" data-lightbox="galleryimages">
	     <img src="/uploads/{{ this.img }}" class="responsive-img hover-opacity" value="{{this.startdate}}: {{this.meetupName}}" style="float: left; cursor:pointer" name="added_imgs">
      </a> 
  </div>
    {{/if}}
	{{/each}}
  </div>
</div>

<div id="modal01" class="modal" onclick="this.style.display='none'">
  <div class="modal-content animate-opacity">
    <img id="img01" style="max-width:100w; width:auto; max-height:100vh; height:auto">
  </div>
  <div id="caption"></div>
</div>

<script>
var caption = $(this).value;
lightbox.option({
    'albumLabel': caption,
    'resizeDuration': 0,
    'imageFadeDuration': 200,
    'fadeDuration': 300,
    'wraparound': true
})
<{{!}}/script>





